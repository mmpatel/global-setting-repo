<div>&nbsp;</div>
<div class="panel panel-default">
  <div class="panel-heading">Global Settings</div>
	<table class="table">
	    <thead>
	    	<tr>
	    	  <th>Key</th>
	    	  <th>Value</th>
	    	  <th>Action</th>
	    	<tr>  
	    </thead>
	    <tbody>
	      <%= render partial: "setting", collection: @settings %>
	    </tbody>
	 </table>
  </div>
</div>	 


<%= form_for(Setting.new) do |f| %>
    <div class="form-group">
      <label>Key</label>
      <%= f.text_field :var, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <label>Value </label>
      <%= f.text_field :value , :class=> "form-control" %>
    </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>